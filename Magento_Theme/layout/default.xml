<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!--Header-->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">200</argument>
                <argument name="logo_img_height" xsi:type="number">50</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="catalog.compare.link" remove="true"/>
        <referenceBlock name="store_language" remove="true"/>
        <referenceBlock name="header" remove="true"/><!--removes welcome msg-->

        <move element="minicart" destination="header.panel.wrapper" after="top.links"/>
        <move element="header-wrapper" destination="header.panel.wrapper" after="-"/>
        
        <move element="navigation.sections" destination="header.container" after="-"/>

        <referenceBlock name="top.container">
            <container name="promo-banner-wrap" label="Promo Banner Wrap" as="promo-banner-wrap" htmlTag="div" htmlClass="promo-banner">
                <block class="Magento\Cms\Block\Block" name="promo-banner" before="breadcrumbs">
                    <arguments>
                        <argument name="block_id" xsi:type="string">promo_banner</argument>
                    </arguments>
                </block>
            </container>
        </referenceBlock>        

        <!--Main-->
        <referenceBlock name="wishlist_sidebar" remove="true" />
        <referenceBlock name="multiple-wishlist_sidebar" remove="true" />
        <referenceBlock name="catalog.compare.sidebar" remove="true" />
        <referenceBlock name="sale.reorder.sidebar" remove="true"/>

        <!--Footer-->
        <referenceBlock name="footer-container">
            <!--Back to Top-->
            <block class="Magento\Theme\Block\Html\Footer" name="backtotop" template="html/backtotop.phtml" before="footer-link-wrap"/>
            <!--Main Footer Content-->
            <container name="footer-link-wrap" label="footer link wrap" as="footer-link-wrap" htmlTag="div" htmlClass="footer-link-wrap">
                 <container name="footer-content" label="footer content" as="footer-content" htmlTag="div" htmlClass="footer content">
                    <!--Footer Links-->
                    <block class="Magento\Cms\Block\Block" name="footer_links_block" before="-">
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer_links_block</argument>
                        </arguments>
                    </block>
                    <!--Footer Social Links-->
                    <block class="Magento\Cms\Block\Block" name="footer_social_links" after="footer_links_block">
                        <arguments>
                            <argument name="block_id" xsi:type="string">footer_social_links</argument>
                        </arguments>
                    </block>
                </container>
            </container>
            <!--Bottom Footer-->
            <container name="footer-base-wrap" label="footer wrap" as="footer-base-wrap" htmlTag="div" htmlClass="footer-base-wrap">
                <container name="footer-base-wrap-inner" label="footer wrap inner" as="footer-base-wrap-inner" htmlTag="div" htmlClass="footer content">
                    <container name="payment-logos-wrap" label="Payment Logos" as="payment-logo-wrap" htmlTag="div" htmlClass="payment-logo-wrap">
                    <block class="Magento\Cms\Block\Block" name="payment_logos" before="copyright">
                        <arguments>
                            <argument name="block_id" xsi:type="string">payment_logos</argument>
                        </arguments>
                    </block>
                    </container>
                </container>
            </container>
        </referenceBlock>
        <move element="copyright" destination="footer-base-wrap-inner" after="-"/>

        <!--<referenceBlock name="skip_to_content.target" remove="true" />-->
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="skip_to_content" remove="true" />
    </body>
</page>
